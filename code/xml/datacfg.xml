<root>
	<default>
		<action global="action" eval="true">($action=="list")?$action="form":$action</action>
		<id global="id" eval="true">$id=current_user()</id>
	</default>
	<form>
		<views>
			<update>
				<title lang="true">formupdate</title>
				<query>
					<export>SELECT '0' id</export>
					<import>SELECT '0' id</import>
					<help include="xml/common/qhelp.xml" replace="true" />
				</query>
			</update>
		</views>
		<name>form</name>
		<action>xml.php</action>
		<method>post</method>
		<hiddens>
			<field>
				<name>page</name>
				<type>hidden</type>
				<value global="page" eval="true">$page</value>
			</field>
			<field>
				<name>action</name>
				<type>hidden</type>
				<value global="action" eval="true">$action</value>
			</field>
		</hiddens>
		<fields>
			<export>
				<fieldset>
					<width>600px</width>
					<title lang="true">export</title>
					<show global="temp" eval="true">(check_user("datacfg",($temp="export")))?"true":"false"</show>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("title_$temp")</label>
							<class>center bold</class>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("desc_$temp")</label>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("desc2_$temp")</label>
							<class>siwrap</class>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>button</type>
							<value global="temp" eval="true">LANG($temp)</value>
							<onclick global="temp" eval="true">"openurl('xml.php?page=datacfg&amp;action=$temp');"</onclick>
							<class>right</class>
							<icon>accept</icon>
						</field>
					</row>
				</fieldset>
			</export>
			<import>
				<fieldset>
					<width>600px</width>
					<title lang="true">import</title>
					<show global="temp" eval="true">(check_user("datacfg",($temp="import")))?"true":"false"</show>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("title_$temp")</label>
							<class>center bold</class>
							<colspan>2</colspan>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("desc_$temp")</label>
							<colspan>2</colspan>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("desc2_$temp")</label>
							<colspan>2</colspan>
							<class>siwrap</class>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>file</type>
							<name>file</name>
							<width>500px</width>
							<size>50</size>
						</field>
						<field>
							<type>button</type>
							<value global="temp" eval="true">LANG($temp)</value>
							<onclick global="temp" eval="true">"setParam('action','$temp');submit1();"</onclick>
							<class>right nowrap</class>
							<icon>accept</icon>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<type>label</type>
							<label global="temp" eval="true">LANG("desc3_$temp")</label>
							<class>bold left</class>
							<colspan>2</colspan>
						</field>
					</row>
				</fieldset>
			</import>
			<help include="xml/common/helpform.xml" />
		</fields>
		<javascript include="xml/common/jsform.xml"/>
	</form>
</root>

<root>
	<default>
		<action global="action" eval="true">($action=="list")?$action="form":$action</action>
		<id global="id" eval="true">$id=current_user()</id>
	</default>
	<form>
		<views>
			<update>
				<title lang="true">formupdate</title>
				<query>
					<default>SELECT '0' id</default>
					<help include="xml/common/qhelp.xml" replace="true" />
				</query>
			</update>
		</views>
		<name>form</name>
		<action>xml.php</action>
		<method>post</method>
		<hiddens include="xml/common/hiddensform.xml" />
		<fields>
			<default>
				<temp global="rows" eval="true">$rows=execute_query("SELECT * FROM tbl_folders WHERE id_usuario='".current_user()."' ORDER BY name ASC")</temp>
				<temp global="rows" eval="true">$rows=is_array($rows)?$rows:array()</temp>
				<temp global="rows" eval="true">$rows=isset($rows["id"])?array($rows):$rows</temp>
				<fieldset global="rows,row" foreach="rows" as="row">
					<title global="row" eval="true">$row["name"]</title>
					<width>100%</width>
					<row>
						<field>
							<type>separator</type>
							<class global="row" eval="true">"boxs siwrap id_".$row["id"]</class>
						</field>
					</row>
				</fieldset>
			</default>
			<help include="xml/common/helpform.xml" />
		</fields>
		<javascript>
			<javascript include="xml/common/jsform.xml" replace="true"/>
			<cache>
				<include>js/home.js</include>
			</cache>
		</javascript>
	</form>
</root>

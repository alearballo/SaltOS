<root>
	<row>
		<field>
			<type>separator</type>
			<width>100%</width>
		</field>
		<field>
			<type>button</type>
			<value lang="true">buttoncreate</value>
			<tip lang="true">buttoncreate</tip>
			<onclick>if(check_required()) insert(0)</onclick>
			<show global="id" eval="true">$id==0?"true":"false"</show>
			<disabled global="page" eval="true">check_user($page,"create")?"false":"true"</disabled>
			<class>nowrap contextmenu</class>
			<icon>accept</icon>
		</field>
		<field>
			<type>button</type>
			<value lang="true">buttoncreatereturnhere</value>
			<tip lang="true">buttoncreatereturnhere</tip>
			<onclick>if(check_required()) insert(1)</onclick>
			<show global="id" eval="true">$id==0?"true":"false"</show>
			<disabled global="page" eval="true">check_user($page,"create")?"false":"true"</disabled>
			<class>nowrap contextmenu</class>
			<icon>accept</icon>
		</field>
		<field>
			<type>button</type>
			<name>buttonupdate</name>
			<value lang="true">buttonupdate</value>
			<tip lang="true">buttonupdate</tip>
			<onclick>if(check_required()) update(0)</onclick>
			<show global="id" eval="true">$id>0?"true":"false"</show>
			<disabled global="page,id" eval="true">execute_query("SELECT '1' denied FROM (SELECT a.id,".check_sql($page).",e.id_usuario id_usuario,d.id_grupo id_grupo FROM tbl_${page} a LEFT JOIN tbl_registros e ON e.id_aplicacion='".page2id($page)."' AND e.id_registro=a.id AND e.primero='1' LEFT JOIN tbl_usuarios d ON e.id_usuario=d.id WHERE a.id='".abs($id)."') z WHERE NOT ".check_sql($page,"edit"))?"true":"false"</disabled>
			<class>nowrap contextmenu</class>
			<icon>accept</icon>
		</field>
		<field>
			<type>button</type>
			<name>buttonupdatereturnhere</name>
			<value lang="true">buttonupdatereturnhere</value>
			<tip lang="true">buttonupdatereturnhere</tip>
			<onclick>if(check_required()) update(1)</onclick>
			<show global="id" eval="true">$id>0?"true":"false"</show>
			<disabled global="page,id" eval="true">execute_query("SELECT '1' denied FROM (SELECT a.id,".check_sql($page).",e.id_usuario id_usuario,d.id_grupo id_grupo FROM tbl_${page} a LEFT JOIN tbl_registros e ON e.id_aplicacion='".page2id($page)."' AND e.id_registro=a.id AND e.primero='1' LEFT JOIN tbl_usuarios d ON e.id_usuario=d.id WHERE a.id='".abs($id)."') z WHERE NOT ".check_sql($page,"edit"))?"true":"false"</disabled>
			<class>nowrap contextmenu</class>
			<icon>accept</icon>
		</field>
		<field>
			<type>button</type>
			<value lang="true">buttoncancel</value>
			<tip lang="true">buttoncancel</tip>
			<onclick>cancel()</onclick>
			<show global="id" eval="true">$id>=0?"true":"false"</show>
			<class>nowrap contextmenu</class>
			<icon>cancel</icon>
		</field>
		<field>
			<type>button</type>
			<name>edit</name>
			<value lang="true">edit</value>
			<tip lang="true">edit</tip>
			<onclick>edit()</onclick>
			<show global="id" eval="true">$id>=0?"false":"true"</show>
			<disabled global="page,id" eval="true">execute_query("SELECT '1' denied FROM (SELECT a.id,".check_sql($page).",e.id_usuario id_usuario,d.id_grupo id_grupo FROM tbl_${page} a LEFT JOIN tbl_registros e ON e.id_aplicacion='".page2id($page)."' AND e.id_registro=a.id AND e.primero='1' LEFT JOIN tbl_usuarios d ON e.id_usuario=d.id WHERE a.id='".abs($id)."') z WHERE NOT ".check_sql($page,"edit"))?"true":"false"</disabled>
			<class>nowrap contextmenu</class>
			<icon>edit</icon>
		</field>
		<field>
			<type>button</type>
			<value lang="true">buttonreturn</value>
			<tip lang="true">buttonreturn</tip>
			<onclick>goback()</onclick>
			<show global="id" eval="true">$id>=0?"false":"true"</show>
			<class>nowrap contextmenu</class>
			<icon>return</icon>
		</field>
	</row>
</root>

<root>
	<fieldset>
		<width>700px</width>
		<row>
			<field>
				<type>hidden</type>
				<name>id</name>
			</field>
			<field>
				<type>hidden</type>
				<name>id_aplicacion</name>
			</field>
			<field>
				<type>hidden</type>
				<name>id_registro</name>
			</field>
			<field>
				<name>nombre</name>
				<label lang="true">nombre</label>
				<type>text</type>
				<width>240px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
				<speech>true</speech>
			</field>
			<field>
				<name>seleccion</name>
				<label lang="true">seleccion</label>
				<type>checkbox</type>
				<value>1</value>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
			</field>
		</row>
		<row>
			<field>
				<type>separator</type>
			</field>
		</row>
		<row>
			<field>
				<name>direccion</name>
				<label lang="true">direccion</label>
				<type>text</type>
				<width>240px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
				<speech>true</speech>
			</field>
		</row>
		<row>
			<field>
				<type>separator</type>
			</field>
		</row>
		<row>
			<field>
				<name>nombre_pais</name>
				<label lang="true">pais</label>
				<type>text</type>
				<width>240px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
				<speech>true</speech>
			</field>
			<field>
				<name>id_pais</name>
				<type>hidden</type>
			</field>
			<field>
				<name>nombre_provincia</name>
				<label lang="true">provincia</label>
				<type>text</type>
				<width>240px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
				<speech>true</speech>
			</field>
			<field>
				<name>id_provincia</name>
				<type>hidden</type>
			</field>
		</row>
		<row>
			<field>
				<name>nombre_poblacion</name>
				<label lang="true">poblacion</label>
				<type>text</type>
				<width>240px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
				<speech>true</speech>
			</field>
			<field>
				<name>id_poblacion</name>
				<type>hidden</type>
			</field>
			<field>
				<name>nombre_codpostal</name>
				<label lang="true">codpostal</label>
				<type>text</type>
				<width>120px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
			</field>
			<field>
				<name>id_codpostal</name>
				<type>hidden</type>
			</field>
			<field>
				<type>separator</type>
				<width>100px</width>
			</field>
		</row>
	</fieldset>
</root>

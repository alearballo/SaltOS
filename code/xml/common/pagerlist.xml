<root>
	<row>
		<field>
			<type>button</type>
			<value lang="true">create</value>
			<tip lang="true">create</tip>
			<onclick>create()</onclick>
			<icon>create</icon>
			<class>nowrap contextmenu</class>
			<class2>shortcut_ctrl_insert</class2>
			<disabled global="page" eval="true">check_user($page,"create")?"false":"true"</disabled>
		</field>
		<field>
			<type>separator</type>
			<width>50%</width>
		</field>
		<field>
			<type>label</type>
			<label eval="true">LANG("paginaspc")."1".LANG("spcdespc")."1"." (".LANG("regsfrom")." "."0".LANG("spcalspc")."0".LANG("spcdespc")."0".")."</label>
			<class>nowrap</class>
			<class2>infopager</class2>
		</field>
		<field ifeval="!ismobile()">
			<type>select</type>
			<name>selectlimit</name>
			<label lang="true">regspage</label>
			<rows>
				<row global="var_i" for="var_i" from="intval(getDefault('regspagermin'))" step="intval(getDefault('regspagerincr'))" to="intval(getDefault('regspagermax'))">
					<label global="var_i" eval="true">$var_i</label>
					<value global="var_i" eval="true">$var_i</value>
				</row>
			</rows>
			<value global="limit" eval="true">$limit</value>
			<onchange>limit1(this.value)</onchange>
		</field>
		<field>
			<type>separator</type>
			<width>50%</width>
		</field>
		<field ifeval="ismobile()">
			<type>select</type>
			<name>selectpager</name>
			<rows>
				<row>
					<label global="offset,limit" eval="true">intval($offset/$limit)+1</label>
					<value></value>
				</row>
			</rows>
			<onchange>page1(this.value)</onchange>
		</field>
		<field>
			<name>firstpager</name>
			<type>button</type>
			<tip lang="true">first</tip>
			<label lang="true">first</label>
			<value ifeval="ismobile()">&lt;&lt;</value>
			<onclick>if(!is_disabled(this)) first()</onclick>
			<icon>first</icon>
			<class>nowrap contextmenu</class>
			<class2>ui-state-disabled shortcut_ctrl_home</class2>
		</field>
		<field>
			<name>previouspager</name>
			<type>button</type>
			<tip lang="true">previous</tip>
			<label lang="true">previous</label>
			<value ifeval="ismobile()">&lt;</value>
			<onclick>if(!is_disabled(this)) previous()</onclick>
			<icon>previous</icon>
			<class>nowrap contextmenu</class>
			<class2>ui-state-disabled shortcut_ctrl_leftArrow</class2>
		</field>
		<field ifeval="!ismobile()">
			<type>select</type>
			<name>selectpager</name>
			<rows>
				<row>
					<label global="offset,limit" eval="true">intval($offset/$limit)+1</label>
					<value></value>
				</row>
			</rows>
			<onchange>page1(this.value)</onchange>
		</field>
		<field>
			<name>nextpager</name>
			<type>button</type>
			<tip lang="true">next</tip>
			<label lang="true">next</label>
			<value ifeval="ismobile()">&gt;</value>
			<onclick>if(!is_disabled(this)) next()</onclick>
			<icon>next</icon>
			<class>nowrap contextmenu</class>
			<class2>ui-state-disabled shortcut_ctrl_rightArrow</class2>
		</field>
		<field>
			<name>lastpager</name>
			<type>button</type>
			<tip lang="true">last</tip>
			<label lang="true">last</label>
			<value ifeval="ismobile()">&gt;&gt;</value>
			<onclick>if(!is_disabled(this)) last()</onclick>
			<icon>last</icon>
			<class>nowrap contextmenu</class>
			<class2>ui-state-disabled shortcut_ctrl_end</class2>
		</field>
	</row>
</root>

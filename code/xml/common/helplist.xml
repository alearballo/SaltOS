<root>
	<temp global="directory,lang" eval="true">$directory="xml/help/$lang/"</temp>
	<temp global="extension" eval="true">$extension=".xml"</temp>
	<temp global="section" eval="true">$section="list"</temp>
	<temp global="directory,page,section,extension,files" eval="true">$files=glob($directory."*-${page}-*-${section}".$extension)</temp>
	<temp global="file,files" eval="true">$file=(is_array($files) &amp;&amp; count($files))?$files[0]:""</temp>
	<fields global="file" ifeval="!is_mobile() &amp;&amp; file_exists($file)">
		<title lang="true">help</title>
		<width>100%</width>
		<row>
			<field>
				<type>columnizer</type>
				<label global="file" eval="true">xml2array($file)</label>
			</field>
		</row>
	</fields>
</root>
























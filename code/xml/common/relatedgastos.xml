<root>
	<gastos>
		<fieldset ifeval="check_user('gastos','menu')">
			<width>700px</width>
			<title lang="true">gastosdata</title>
			<head>
				<field>
					<type>label</type>
					<label lang="true">id</label>
					<class>thead</class>
				</field>
				<field>
					<type>label</type>
					<label lang="true">empresa</label>
					<class>thead</class>
				</field>
				<field>
					<type>label</type>
					<label lang="true">date</label>
					<class>thead</class>
				</field>
				<field>
					<type>label</type>
					<label lang="true">numfac</label>
					<class>thead</class>
				</field>
				<field>
					<type>label</type>
					<label lang="true">base</label>
					<class>thead</class>
					<math>
						<func>sum()</func>
						<label lang="true">suma</label>
					</math>
				</field>
				<field>
					<type>label</type>
					<label lang="true">total</label>
					<class>thead</class>
					<math>
						<func>sum()</func>
						<label lang="true">suma</label>
					</math>
				</field>
				<field>
					<type>label</type>
					<label lang="true">cuenta</label>
					<class>thead</class>
				</field>
				<field>
					<type>separator</type>
					<class>thead</class>
					<colspan>100</colspan>
					<math>
						<ignore>true</ignore>
					</math>
				</field>
			</head>
			<row>
				<field>
					<type>label</type>
					<name>id</name>
					<class>tbody</class>
				</field>
				<field>
					<type>label</type>
					<name>empresa</name>
					<class>tbody</class>
				</field>
				<field>
					<type>label</type>
					<name>fecha</name>
					<class>tbody</class>
				</field>
				<field>
					<type>label</type>
					<name>num</name>
					<class>tbody</class>
				</field>
				<field>
					<type>label</type>
					<name>base</name>
					<class>tbody</class>
				</field>
				<field>
					<type>label</type>
					<name>total</name>
					<class>tbody</class>
				</field>
				<field>
					<type>label</type>
					<name>cuenta</name>
					<class>tbody</class>
				</field>
				<field>
					<name>link_view</name>
					<type>link</type>
					<label lang="true">view</label>
					<width>1px</width>
					<icon>view</icon>
					<class>tbody</class>
				</field>
			</row>
		</fieldset>
	</gastos>
</root>

<root>
	<query match="direccion_new" prefix="true" eval="true">!getParam("nombre")?setParam("nombre",LANG("sinnombre")." (".str_replace(array("-",":"," "),"",current_datetime()).")"):""</query>
	<query global="page" match="direccion_new" prefix="true" eval="true">"INSERT INTO tbl_direcciones(`id`,`id_aplicacion`,`id_registro`,`nombre`,`direccion`,`nombre_codpostal`,`nombre_poblacion`,`nombre_provincia`,`seleccion`,`id_pais`,`id_provincia`,`id_poblacion`,`id_codpostal`,`nombre_pais`) VALUES(NULL,'".page2id($page)."',(SELECT MAX(id) FROM tbl_${page}),'".getParam("nombre")."','".getParam("direccion")."','".getParam("nombre_codpostal")."','".getParam("nombre_poblacion")."','".getParam("nombre_provincia")."','".intval(getParam("seleccion"))."','".getParam("id_pais")."','".getParam("id_provincia")."','".getParam("id_poblacion")."','".getParam("id_codpostal")."','".getParam("nombre_pais")."')"</query>
</root>

<root>
	<name>style</name>
	<label lang="true">style</label>
	<type>select</type>
	<width>120px</width>
	<rows ifeval="!is_mobile()">
		<row>
			<label>Blue</label>
			<value>blue</value>
		</row>
		<row>
			<label>Dark blue</label>
			<value>blue2</value>
		</row>
		<row>
			<label>Light blue</label>
			<value>blue3</value>
		</row>
		<row>
			<label>Red</label>
			<value>red</value>
		</row>
		<row>
			<label>Pink</label>
			<value>pink</value>
		</row>
		<row>
			<label>Light brown</label>
			<value>brown</value>
		</row>
		<row>
			<label>Dark brown</label>
			<value>brown2</value>
		</row>
		<row>
			<label>Dark violet</label>
			<value>violet</value>
		</row>
		<row>
			<label>Light Violet</label>
			<value>violet2</value>
		</row>
		<row>
			<label>Light green</label>
			<value>green</value>
		</row>
		<row>
			<label>Dark green</label>
			<value>green2</value>
		</row>
		<row>
			<label>Black</label>
			<value>black</value>
		</row>
	</rows>
	<rows ifeval="is_mobile()">
		<row>
			<label>Black</label>
			<value>a</value>
		</row>
		<row>
			<label>Blue &amp; gray</label>
			<value>b</value>
		</row>
	</rows>
	<value global="style" eval="true">$style</value>
	<onchange>submit1()</onchange>
</root>

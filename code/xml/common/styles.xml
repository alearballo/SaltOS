<root>
	<name>style</name>
	<label lang="true">style</label>
	<type>select</type>
	<width>120px</width>
	<rows ifeval="!ismobile()">
		<row>
			<label>Blue</label>
			<value>custom.blue</value>
		</row>
		<row>
			<label>Green</label>
			<value>custom.green</value>
		</row>
		<row>
			<label>Violet</label>
			<value>custom.violet</value>
		</row>
		<row>
			<label>Orange</label>
			<value>custom.orange</value>
		</row>
		<row>
			<label>Red</label>
			<value>custom.red</value>
		</row>
		<row>
			<label>Humanity</label>
			<value>theme.humanity</value>
		</row>
		<row>
			<label>Redmond</label>
			<value>theme.redmond</value>
		</row>
		<row>
			<label>UI darkness</label>
			<value>theme.ui-darkness</value>
		</row>
		<row>
			<label>UI lightness</label>
			<value>theme.ui-lightness</value>
		</row>
	</rows>
	<rows ifeval="ismobile()">
		<row>
			<label>Base (light)</label>
			<value>base.a</value>
		</row>
		<row>
			<label>Base (dark)</label>
			<value>base.b</value>
		</row>
		<row>
			<label>FlatUI blue (dark)</label>
			<value>flatui.a</value>
		</row>
		<row>
			<label>FlatUI green</label>
			<value>flatui.b</value>
		</row>
		<row>
			<label>FlatUI b/w (dark)</label>
			<value>flatui.c</value>
		</row>
		<row>
			<label>FlatUI red</label>
			<value>flatui.d</value>
		</row>
		<row>
			<label>FlatUI yellow</label>
			<value>flatui.e</value>
		</row>
		<row>
			<label>FlatUI blue</label>
			<value>flatui.f</value>
		</row>
		<row>
			<label>FlatUI green (light)</label>
			<value>flatui.g</value>
		</row>
	</rows>
	<value global="style" eval="true">$style</value>
	<onchange>submit1()</onchange>
</root>

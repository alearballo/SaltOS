<root>
	<default>
		<action global="action" eval="true">($action=="list")?$action="form":$action</action>
		<id global="id" eval="true">$id=current_user()</id>
	</default>
	<form>
		<views>
			<update>
				<title lang="true">formupdate</title>
				<query>
					<default>SELECT '0' id</default>
				</query>
			</update>
		</views>
		<name>form</name>
		<action>xml.php</action>
		<method>post</method>
		<hiddens include="xml/common/hiddensform.xml" />
		<fields>
			<default>
				<temp global="directory" eval="true">$directory="files/"</temp>
				<temp global="directory,files" eval="true">$files=glob($directory."error*.log")</temp>
				<temp global="files" eval="true">$files=(is_array($files) &amp;&amp; count($files)>0)?$files:array()</temp>
				<temp global="directory,files" eval="true">$files=str_replace($directory,"",$files)</temp>
				<fieldset global="files,row" foreach="files" as="row">
					<buttons>true</buttons>
					<title global="row" eval="true">$row</title>
					<row>
						<field>
							<label global="row" eval="true">LANG("defaultdata").$row</label>
							<type>label</type>
							<class>left bold</class>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<name global="row" eval="true">$row</name>
							<type>textarea</type>
							<value global="directory,row" eval="true">file_get_contents($directory.$row)</value>
							<width>700px</width>
							<height>300px</height>
							<readonly>true</readonly>
							<class3>ascii</class3>
						</field>
					</row>
				</fieldset>
				<fieldset global="files" ifeval="!count($files)">
					<buttons>true</buttons>
					<title lang="true">formupdate</title>
					<row>
						<field>
							<label lang="true">nodata</label>
							<type>label</type>
							<class>left bold</class>
						</field>
					</row>
					<row>
						<field>
							<type>separator</type>
						</field>
					</row>
					<row>
						<field>
							<name>void</name>
							<type>textarea</type>
							<value></value>
							<width>700px</width>
							<height>300px</height>
							<readonly>true</readonly>
							<class3>ascii</class3>
						</field>
					</row>
				</fieldset>
			</default>
		</fields>
		<buttons>
			<row>
				<field>
					<type>button</type>
					<value lang="true">buttonreturn</value>
					<onclick>goback()</onclick>
					<class>right contextmenu</class>
					<icon>return</icon>
				</field>
			</row>
		</buttons>
		<javascript include="xml/common/jsform.xml"/>
	</form>
</root>

<root>
	<default>
		<action>form</action>
		<id global="id" eval="true">$id=current_user()</id>
	</default>
	<form>
		<name>form</name>
		<action>xml.php</action>
		<method>post</method>
		<fields>
			<buttons>true</buttons>
			<width>600px</width>
			<title lang="true">title</title>
			<row>
				<field>
					<label lang="true">title</label>
					<type>label</type>
					<class>center bold</class>
				</field>
			</row>
			<row>
				<field>
					<type>separator</type>
				</field>
			</row>
			<row>
				<field>
					<label lang="true">short</label>
					<type>label</type>
					<class>left</class>
				</field>
			</row>
			<row>
				<field>
					<type>separator</type>
				</field>
			</row>
			<row>
				<field>
					<label lang="true">large</label>
					<type>label</type>
					<class>left siwrap</class>
				</field>
			</row>
		</fields>
		<buttons>
			<row>
				<field>
					<type>button</type>
					<value lang="true">buttonreturn</value>
					<onclick>goback()</onclick>
					<class>right contextmenu</class>
					<icon>return</icon>
				</field>
			</row>
		</buttons>
		<javascript>
			<!-- FOR GENERAL PURPOSES -->
			<function>goback() { history.back(); }</function>
			<!-- FOR CONTROL MANAGER -->
			<function global="page" eval="true">"current_page() { return '$page'; }"</function>
			<function eval="true">"lang_loading() { return '".LANG_ESCAPE("loading")."' }"</function>
			<function eval="true">"lang_error() { return '".LANG_ESCAPE("error")."' }"</function>
			<function eval="true">"lang_buttoncontinue() { return '".LANG_ESCAPE("buttoncontinue")."'; }"</function>
		</javascript>
	</form>
</root>
